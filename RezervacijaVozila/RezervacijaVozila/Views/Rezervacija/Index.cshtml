@model IEnumerable<RezervacijaVozila.Models.Rezervacija>

@{
    ViewBag.Title = "Rezervacije";
}
<h2 class="text-center">@ViewBag.Title</h2>
<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Osoba.Ime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Osoba.Prezime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vozilo.Naziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VrijemeRezervacije)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VrijemePreuzimanja)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MjestoID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AdresaPreuzimanja)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BrojPrijedenihKm)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Osoba.Ime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Osoba.Prezime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vozilo.Naziv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VrijemeRezervacije)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VrijemePreuzimanja)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mjesto.Naziv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AdresaPreuzimanja)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BrojPrijedenihKm)
        </td>
        <td>
            @Html.ActionLink("Uredi", "Edit", new { id=item.RezervacijaID }) |
            @Html.ActionLink("Detalji", "Details", new { id=item.RezervacijaID }) |
            @Html.ActionLink("Ukoni", "Delete", new { id=item.RezervacijaID })
        </td>
    </tr>
}

</table>

<br>
<button class="button btn btn-info" type="button" onclick="location.href='@Url.Action("Create", "Rezervacija")'">Dodaj rezervaciju</button>
